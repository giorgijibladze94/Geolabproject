<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.geolabedu.testn2.CaucasusContactActivity">


    <android.support.v7.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/rose"
        android:theme="@style/ToolbarColoredBackArrow"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/contacttoolbar"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ზ.ფალიაშვილის 26"
        android:textSize="20dp"
        android:layout_below="@+id/contacttoolbar"
        android:id="@+id/contact"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        android:text="თბილისი 0179,საქართველო"
        android:layout_below="@+id/contact"
        android:id="@+id/contact1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        android:text="ტელ: +995 32 2 49 64 64"
        android:layout_below="@+id/contact1"
        android:id="@+id/contact2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        android:text="ელ-ფოსტა:sales@caucasusauto.net"
        android:layout_below="@+id/contact2"
        android:id="@+id/contact3"/>

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_below="@+id/contact3"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map"
        map:mapType="normal"
        android:layout_centerHorizontal="true"
        map:liteMode="true"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_marginBottom="80dp"/>


</RelativeLayout>
